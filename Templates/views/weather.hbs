{{>boilerplate}}
<div class="container-fluid main_header mx-5 my-3">
    <div class="row g-3 mb-5 d-flex justify-content-center" id="search-box">
        <form class="row g-3 d-flex justify-content-center">
            <div class="col-auto">
                <input type="text" class="form-control form-control-lg" style="width: 20vw;" id="city"
                    placeholder="Enter City">
            </div>
            <div class="col-auto">
                <button type="submit" id="default-button"
                    style="font-size: small; padding: 0.6rem 1.8rem; box-shadow: 0 4px 6px -6px #000;">Check
                    Now</button>
            </div>
        </form>
    </div>


    <div class="row mt-5" id="weather-data">
        <div class="col-md-4 col-12 pt-5 d-flex justify-content-center">
            <div class="card" style="width: 30rem; border: none;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted text-center" id="citytxt" style="border: none;"></li>
                    <li class="list-group-item text-muted text-center">{{{datetime}}}</li>
                </ul>
                <img src="images/Icons/02d.png" class="card-img-top py-5" alt="..." id="weatherimg"> {{! img according to weather info}}
                <div class="card-body py-0">
                    <h3 class="card-title weather-type text-center" style="font-weight: bolder;" id="tempstatus">__</h3>
                    <p class="card-text temprature text-center" id="temp">__Â°C</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-0" style="border: none;">
                        <div class="row">
                            <div class="col-6">
                                <span class="text-muted text-start" id="weather-span">Humidity</span>
                            </div>
                            <div class="col-6 d-flex justify-content-end" id="weather-span">
                                <p><span id="humidity">__</span> <span>%</span></p>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item" style="border: none;">
                        <div class="row">
                            <div class="col-6">
                                <span class="text-muted text-start" id="weather-span">Wind Speed</span>
                            </div>
                            <div class="col-6 d-flex justify-content-end" id="weather-span">
                                <p><span id="windspeed">__</span> <span>m/s</span></p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        {{! Chart }}
        <div class="col-md-8 col-12 pt-5 d-dlex justify-content-center"></div></div>
</div>
